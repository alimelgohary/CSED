<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    tools:context = ".Table"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="5dp"

        >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="today"
            android:background="@drawable/bordertext"
            android:textColor="#fff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tomorrow"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="tomorrow"
            android:background="@drawable/bordertext"
            android:textColor="#fff"
            />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/sec"
        android:layout_weight="1"
        android:text=""
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tableText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:text=""
        android:layout_weight="7"
        android:textColor="#fff"
        android:textAlignment="viewEnd"
        android:textStyle="bold"
        android:textIsSelectable="true"
        />
    </LinearLayout>
</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sat"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="saturday"
            android:background="@drawable/bordertext"
            android:textColor="#fff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="sunday"
            android:background="@drawable/bordertext"
            android:textColor="#fff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mon"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="monday"
            android:background="@drawable/bordertext"
            android:textColor="#fff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tue"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@drawable/bordertext"
            android:textColor="#fff"
            android:onClick="tuesday"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/lasts"
        android:layout_weight="1"
        >


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Wed"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="wednesday"
            android:background="@drawable/bordertext"
            android:textColor="#fff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thu"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="thursday"
            android:background="@drawable/bordertext"
            android:textColor="#fff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fri"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="friday"
            android:background="@drawable/bordertext"
            android:textColor="#fff"
            />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>


</LinearLayout>